<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CoinTradeSimulator - Forgot Password</title>
    <link rel="stylesheet" href="/css/mainPage.css">
    <link rel="stylesheet" href="/css/login/loginPage.css">
</head>
<body>
    <div id="login">
        <form action="/forgotpassword" method="post">
            <h2>FORGOT PASSWORD</h2>
            <% if (locals.validation_error != undefined || locals.success_message != undefined || locals.login_error != undefined) { %>
                <%- include("./partials/_messages.ejs") %> 
            <% } %>
            <input class="input" placeholder="email" name="email" type="text">
            <input class="submit" type="submit" placeholder="LOGIN" value="SEND">
            <hr style="color: white; background-color: white; margin-top: 2rem; width: 80%; align-self: center;">
            <p>You don't have an account? <a href="/register">Register</a></p>
            <p>You have an account already? <a href="/login">Login</a></p>
        </form>
    </div>
</body>
</html>